{
  "manifest_version": 2,

  "name": "Qubit Deliver Toolkit",
  "description": "Debug toolbar for Qubit Deliver personalisation platform.",
  "version": "0.2.0",

  "permissions": [
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.qubitproducts.com/*",
      "*://*.qubit.com/*"
    ]
  },
  "web_accessible_resources" : [
    "/js/background/background.js",
    "/js/content/deliver_toolkit.js",
    "/js/content/deliver_toolkit_comms.js",
    "/js/library/*.js",
    "/assets/font/*.*",
    "/assets/*.*"
  ],
  "background": {
    "scripts": ["js/background/background.js"]//,
    // "persistent": true
  },
  "content_scripts": [{
    // "matches": ["http://*/*", "https://*/*"],
    "matches": [
      // "http://www.jimmychoo.com/*",
      // "http://www.carshop.co.uk/*"
      "http://*/*",
      "https://*/*"
    ],
    "exclude_matches": [
      "http://*.qubitproducts.com/*",
      "https://*.qubitproducts.com/*"
    ],
    "js": [
      //"js/library/jQuery_1_11_1.min.js",
      "js/content/deliver_toolkit.min.js"
    ],
    "css": [
      "css/content.css"
    ],
    "run_at": "document_start"
  }],
  "browser_action": {
    // "default_icon": "icon.png",
    "default_popup": "templates/popup/popup.html"
  }
}